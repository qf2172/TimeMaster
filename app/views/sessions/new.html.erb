<div style="width: 100%; text-align: right;">
  <%= link_to 'Sign Up', signup_path, class: 'button' %>
</div>

<h1>Login</h1>
<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
    <% if flash[:login_error] %>
        <div id="error_explanation">
            <h2><%= flash[:login_error] %></h2>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :email %><br>
        <%= form.email_field :email, autofocus: true %>
    </div>

    <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, autocomplete: "current-password" %>
    </div>
    

    <div class="actions">
        <%= form.submit "Log in" %>
    </div>
<% end %>